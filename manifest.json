{
    "manifest_version": 3,
    "name": "Pure Twitch",
    "description": "Remove all the sexual content from Twitch.tv, such as bikini streams, twerking streams, and streamers that show too much cleavage.",
    "version": "4.0.0",
    "content_scripts": [
        {
            "js": [
                "utils.js",
                "script.js"
            ],
            "matches": [
                "https://*.twitch.tv/*"
            ]
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "atlas@atlasdev.men"
        }
    },
    "icons": {
        "32": "logo@1x.png",
        "64": "logo@2x.png"
    }
}